{
  "name": "bootstrap-personal-website",
  "version": "1.0.0",
  "description": "My personal website made with Bootstrap 4 (to refresh Bootstrap)",
  "main": "index.html",
  "scripts": {
    "watch:sass": "node-sass sass/custom.scss css/style.css -w",
    "compile:sass": "node-sass sass/custom.scss css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions \" css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build": "npm-run-all compile:sass concat:css prefix:css compress:css",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ppeelman/bootstrap-personal-website.git"
  },
  "keywords": [
    "website"
  ],
  "author": "Philippe Peelman",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ppeelman/bootstrap-personal-website/issues"
  },
  "homepage": "https://github.com/ppeelman/bootstrap-personal-website#readme",
  "dependencies": {
    "bootstrap": "^4.3.1"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "concat": "^1.0.3",
    "node-sass": "^4.12.0",
    "postcss-cli": "^6.1.3"
  }
}
